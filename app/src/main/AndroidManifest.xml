<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bellng.trackall" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Blue"
        tools:replace="android:icon" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddPackageActivity"
            android:label="@string/title_activity_add_item" >
        </activity>
        <activity
            android:name=".AddAccountActivity"
            android:label="@string/title_activity_add_account" >
        </activity>
        <activity
            android:name=".ViewPackageActivity"
            android:label="@string/title_activity_view_package" >
        </activity>
    </application>

</manifest>
